{% extends 'base.html.twig' %}

{% block title %}Profesional Agenda{% endblock %}
{% block panelTitle %}Agenda{% endblock %}
{% block body %}
    <div class="printiable">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-9">
                    <div class="col-md-4" style="float: left;">
                        <ul class="nav nav-tabs justify-content-center">
                            <li class="nav-item">
                                <a class="nav-link {{  periodo == 'dia' ? 'active' : ''  }}" href="{{ path('doctor_agenda', {'periodo': 'dia'}) }}">Hoy</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{  periodo == 'semana' ? 'active' : ''  }}" href="{{ path('doctor_agenda', {'periodo': 'semana'}) }}">Semana</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{  periodo == 'mes' ? 'active' : ''  }}" href="{{ path('doctor_agenda', {'periodo': 'mes'}) }}">Mes</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link {{  periodo == 'anteriores' ? 'active' : ''  }}" href="{{ path('doctor_agenda', {'periodo': 'anteriores'}) }}">Anteriores</a>
                            </li>
                        </ul>
                    </div>
                    <div class="col-md-6" style="display: {{  periodo == 'anteriores' ? 'block' : 'none'  }}; float: left;">
                        <div class="col-md-6" style="float: left;">
                            <div class="col-md-3" style="float: left;line-height: 35px;">
                                Desde:
                            </div>
                            <div class="col-md-9" style="float: left;">
                                <input id='from' type="date" class="js-datepicker form-control" value="{{ desde }}">
                            </div>
                        </div>
                        <div class="col-md-6" style="float: left;">
                            <div class="col-md-2" style="float: left;line-height: 35px;">
                                Hasta:
                            </div>
                            <div class="col-md-10" style="float: left;">
                                <input id='to' type="date" class="js-datepicker form-control" value="{{ hasta }}" data-url="{{ path('doctor_agenda', {'periodo': 'anteriores'}) }}">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2" style="display: {{  periodo == 'anteriores' ? 'block' : 'none'  }}; float: left;">
                        <select class="form-control" id="obraSocial" data-url="{{ path('doctor_agenda', {'periodo': periodo}) }}">
                            <option value="0">Obra Social</option>
                            {% for key, obrasSocial in obrasSociales %}
                                <option value="{{ key }}" {% if key == obraSocialSelected %} selected="selected" {% endif %}>{{ obrasSocial }}</option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="input-group mb-3">
                        <input id='nombreInput' type="text" value="{{ nombreInput }}" class="form-control" placeholder="Buscar por Nombre del Paciente" aria-label="Buscar por Nombre del Paciente" aria-describedby="buscarPorNombre">
                        <div class="input-group-append">
                            <a class="btn btn-outline-secondary" data-inactivo="false" data-url="{{ path('doctor_agenda', {'periodo': periodo}) }}" type="button" id="buscarPorNombreYfechas" style="padding: 10px;">
                                <i class="fas fa-search"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col" class="numero">#</th>
                <th scope="col" class="beginAt">Comienza</th>
                <th scope="col" class="endAt">Finaliza</th>
                <th scope="col" class="paciente">Paciente</th>
                <th scope="col" class="obraSocial">O. Social</th>
                <th scope="col" class="completado">Turno Completado?</th>
                <th scope="col" class="acciones">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% set cantMediaSesiones = 0 %}
            {% for key,turno in today %}
                {% if turno.cliente.MediaSesion %}
                    {% set cantMediaSesiones = cantMediaSesiones + 1 %}
                {% endif %}
                <tr class="{% if turno.cliente.MediaSesion %} mediaSesion {% endif %}">
                    <td class="numero">{{ key + 1 }}</td>
                    <td class="beginAt">{{ turno.beginAt ?  turno.beginAt | date('Y-m-d H:i:s') : '' }}</th>
                    <td class="endAt">{{ turno.endAt ?  turno.endAt | date('Y-m-d H:i:s') : '' }}</th>
                    <td class="paciente">{{ turno.cliente.nombre }} {{ turno.cliente.apellido }}</td>
                    <td class="obraSocial">{{ obrasSociales[turno.cliente.obraSocial] }} {% if turno.cliente.MediaSesion %} (Media Sesion) {% endif %}</td>
                    <td class="completado">
                        <input {{ turno.completado ? 'disabled' : '' }} class="completado" data-url="{{ path('doctor_agenda', {'periodo': periodo}) }}" data-turno-id="{{ turno.id }}" type="checkbox" {{ turno.completado ? 'checked' : '' }}>
                    </td>
                    <td class="acciones">
                        <a href="{{ path('nota_para_turno', {'turnoId': turno.id}) }}">
                            <i class="far fa-clipboard"></i>
                            {% if turno.notas.count %}
                                *
                            {% endif %}
                        </a>
                    </td>
                </tr>
            {% endfor %}
                <tr>
                    <td colspan="4" style="text-align: right">Medias Sesiones:</td>
                    <td >{{ cantMediaSesiones }}</td>
                    <td  style="text-align: right">Total:</td>
                    <td >{{ today|length }}</td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock %}
{% block modalImprimir %}
        <div class="form-check">
            <input class="form-check-input check" type="checkbox" value="beginAt" id="beginAt">
            <label class="form-check-label" for="beginAt">
                Comienza
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input check" type="checkbox" value="endAt" id="endAt">
            <label class="form-check-label" for="endAt">
                Finaliza
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input check" type="checkbox" value="paciente" id="paciente">
            <label class="form-check-label" for="paciente">
                Paciente
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input check" type="checkbox" value="obraSocial" id="obraSocial">
            <label class="form-check-label" for="obraSocial">
                O. Social
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input check" type="checkbox" value="completado" id="completado">
            <label class="form-check-label" for="completado">
                Turno Completado?
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="todos" id="todos">
            <label class="form-check-label" for="todos">
                Todos
            </label>
        </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/doctorAgenda.js') }}"></script>
    <script>
        var tituloExcel = 'agenda.xlsx';
        let printUrl = "{{ path('imprimir') }}";
    </script>
{% endblock %}