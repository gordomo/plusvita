
<!-- Sidebar -->
<div class="bg-light border-right" id="sidebar-wrapper">
    <div class="sidebar-heading">Start Bootstrap </div>
    <div class="list-group list-group-flush">
        {% if app.user %}
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('dashboard_index') }}">
                <i class="fas fa-chart-line"></i>
                Dashboard
            </a>
        {% endif %}
        {% if app.user and 'ROLE_ADMIN' in app.user.roles %}
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('user_index') }}">
                <i class="fas fa-users"></i>
                Administradores
            </a>
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('doctor_index') }}">
                <i class="fas fa-user-md"></i>
                Staff
            </a>
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('cliente_index') }}">
                <i class="fas fa-user-injured"></i>
                Pacientes
            </a>
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('habitacion_index') }}">
                <i class="fas fa-bed"></i>
                Habitaciones
            </a>
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('obra_social_index') }}">
                <i class="fas fa-first-aid"></i>
                Obras Sociales
            </a>
        {% endif %}
        {% if app.user %}
            <a class="list-group-item list-group-item-action bg-light " href="{{ path('app_logout') }}">
                <i class="fas fa-chevron-circle-left"></i>
                Salir
            </a>
        {% endif %}
    </div>
</div>
<!-- /#sidebar-wrapper -->
