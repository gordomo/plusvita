{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/dashboard.js') }}"></script>
    <script>
        var tituloExcel = 'dashboard.xlsx';
        let printUrl = "{{ path('imprimir') }}";

        $('#filtrarPorFecha').click(function () {
            $('#loading').show();

            let from = $('#from').val();
            let to = $('#to').val();
            let headerFrom = new Date(from);
            let headerTo = new Date(to);

            if (from === '' || to === '') {
                alert('Debe completar las fechas');
                $('#loading').hide();
                return 0;
            }

            if (headerTo < headerFrom) {
                alert('La fecha desde debe ser mayor a la fecha hasta');
                $('#loading').hide();
                return 0;
            }
            let needOneMore = true;
            if (headerTo.toLocaleDateString() === headerFrom.toLocaleDateString()) {
                headerTo.setDate(headerTo.getDate()+1);
                needOneMore = false;
            }

            let html_header = '<th>Cliente</th><th style="min-width: 100px;">O. Social</th>';
            let dateIndex = 0;

            while (headerFrom.toLocaleDateString() !== headerTo.toLocaleDateString()) {
                headerFrom.setDate(headerFrom.getDate()+1);
                html_header += '<th id="date-index-'+dateIndex+'">' + headerFrom.toLocaleDateString(); + '</th>';
                dateIndex ++;
            }

            if (needOneMore) {
                headerFrom.setDate(headerFrom.getDate()+1);
                html_header += '<th>' + headerFrom.toLocaleDateString(); + '</th>';
            }

            $("#head").html(html_header);

            $.post({
                url: "{{ path('dashboard_index_filtro_cantidad_pacientes') }}",
                data: {
                    from: from,
                    to: to,
                },
                success: function (response) {
                    let html = '';
                    let fechaCheck = '';
                    let i = 0;

                    Object.keys(response).forEach(function(k, v) {
                        html += '<tr><td>'+ k +'</td>';

                        Object.keys(response[k]).forEach(function(i) {
                            html += '<td>'+ i +'</td>';

                            Object.keys(response[k][i]).forEach(function(e) {
                                html += '<td>';
                                if (response[k][i][e].habitacion !== undefined) {
                                    html += 'hab: '+response[k][i][e].habitacion;
                                    if (response[k][i][e].cama !== undefined) {
                                        html += ' <br> cama: '+ response[k][i][e].cama;
                                    }
                                } else {
                                    html += " - ";
                                }
                                html +='</td>';
                            });
                        })
                        html += '</tr>';
                    });

                    $('#body').html(html);
                    $('#loading').hide();
                    $('#resultado').show();
                    $('#pacientesCount').html(response.length + ' Pacientes en Total');
                },
                error: function(e){
                    console.log(e);
                    alert("algo salio mal");
                    $('#loading').hide();
                }
            });

        })

    </script>
{% endblock %}