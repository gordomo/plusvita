{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/dashboard.js') }}"></script>
    <script>
        var tituloExcel = 'dashboard.xlsx';
        let printUrl = "{{ path('imprimir') }}";

        $('#filtrarPorFecha').click(function () {
            $('#loading').show();
            let from = $('#from').val();
            let to = $('#to').val();
            if (from === '' || to === '') {
                alert('Debe completar las fechas');
                $('#loading').hide();
                return 0;
            }

            $.post({
                url: "{{ path('dashboard_index_filtro_cantidad_pacientes') }}",
                data: {
                    from: from,
                    to: to,
                },
                success: function (response) {
                    let html = '';
                    let fechaCheck = '';
                    let i = 0;

                    $(response).each(function (e, val) {
                        let fecha = new Date(val.fecha.date);
                        let fechaConFormato = fecha.toLocaleString('es-AR').replace(" 00:00:00", "");
                        if ( val.fecha.date !== fechaCheck ) {
                            if (i !== 0 ) {
                                html += '<tr><td colspan="5" style="background: aquamarine;">Total del día: ' + fechaConFormato + '<b> ' + i + ' Pacientes </b></td></tr>';
                                i = 0;
                            }
                        }
                        html += '<tr>';
                        html += '<td>';
                        html += fechaConFormato;
                        html += '</td>';
                        html += '<td>';
                        html += val.habitacion;
                        html += '</td>';
                        html += '<td>';
                        html += val.cama === null ? 'Priv.' : val.cama;
                        html += '</td>';
                        html += '<td>';
                        html += val.nombreCliente;
                        html += '</td>';
                        html += '<td>';
                        html += val.obraSocial;
                        html += '</td>';
                        html += '</tr>';

                        if ( (e+1) === response.length ) {
                            html += '<tr><td colspan="5" style="background: aquamarine;">Total del día: ' + fechaConFormato + '<b> ' + (i + 1) + '</b> Pacientes </td></tr>';
                            html += '<tr><td colspan="5" style="background: darkgray;">Total: <b> ' + (e + 1) + '</b> Pacientes </td></tr>';
                        }
                        i++;
                        fechaCheck = val.fecha.date;
                    });
                    $('#body').html(html);
                    $('#loading').hide();
                    $('#resultado').show();
                    $('#pacientesCount').html(response.length + ' Pacientes en Total');
                },
                error: function(e){
                    console.log(e);
                    alert("algo salio mal");
                    $('#loading').hide();
                }
            });

        })

    </script>
{% endblock %}