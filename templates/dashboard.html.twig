{% extends 'base.html.twig' %}

{% block title %}Dashboard index{% endblock %}
{% block panelTitle %}Dashboard{% endblock %}
{% block titleButtons %}
    {% if (hayContratosVencidos or hayVencenEsteMes) and is_granted('ROLE_ADMIN') %}
        <a href="{{ path('doctor_index', {'vencidos': (hayContratosVencidos) ? 1 : 2}) }}">
            <i class="bell far fa-bell" style="color: {{ colorCampana }}"></i>
        </a>
    {% endif %}
{% endblock %}

{% block filtros %}
    {% if is_granted('ROLE_ADMIN') %}

        {#filtros#}
        <div class="col-sm" style="align-items: center; justify-content: center; display: flex;">
            <button class="btn btn-default" data-toggle="modal" data-target="#filtros"><i class="fas fa-filter"></i></button>
        </div>
        <div class="modal fade bd-example-modal-xl camposExtras" id="filtros" tabindex="-1" role="dialog" aria-labelledby="filtros" aria-hidden="true">
            <div class="modal-dialog modal-xl">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLongTitle">Filtrar</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="form-group columnas-de-dos">
                            <label for="contrato">Desde</label>
                                <input class="form-control" type="date" id="from">
                            <label for="contrato">Hasta</label>
                            <input class="form-control" type="date" id="to">
                        </div>
                        <div class="form-group text-right">
                            <span class="btn bg-secondary text-white" style="cursor: default" id="pacientesCount"></span>
                            <button type="button" id="filtrarPorFecha" class="btn btn-primary">Buscar</button>
                        </div>
                        <div class="form-group text-center" style="overflow: auto;">
                            <img id="loading" src="{{ asset('assets/images/loading.gif') }}">
                            <table class="table table-striped" id="resultados" >
                                <thead id="head">
                                </thead>
                                <tbody id="body"></tbody>
                                <tfoot id="foot"></tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {% endif %}
{% endblock %}

{% block body %}
    {% if not app.user %}
        Por favor, ingrese con su usuario y contraseña
        <a href="{{ path('app_login') }}">ingresar</a>
    {% elseif is_granted('ROLE_ADMIN') %}
        <div class="printiable">
            <div class="table-responsive">
                <table class="table dashboard border-0 mb-0">
                    <thead>
                        <th class="habitacion">Habitacion</th>
                        <th class="paciente">Paciente</th>
                        <th class="obraSocial">Obra Social</th>
                        <th class="patología">Patología</th>
                        <th class="edad">Edad</th>
                        <th class="dieta">Dieta</th>
                    </thead>
                    <tbody>
                        {% for nombre, habitacion in habitacionesYpacientes %}
                            {% set nombreHabitacionAnterior = "nuevo"  %}
                            {% for key, paciente in habitacion.cliente %}
                                <tr class="{{ ( habitacion.ocupadas is same as (habitacion.disponibles) ) ? 'completa' : 'incompleta' }}">
                                    <td class="habitacion {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {% if (nombre != nombreHabitacionAnterior) %}
                                            {{ nombre }} - {{ habitacion.ocupadas }} / {{ habitacion.disponibles }}
                                        {% endif %}
                                    </td>
                                    <td class="paciente {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}" >
                                         <a href="{{ path('cliente_show', {id: paciente.id}) }}">{{ paciente.nombre }} {{ paciente.apellido }}</a>
                                    </td>
                                    <td class="obraSocial {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ obrasSociales[paciente.obraSocial] }}
                                    </td>
                                    <td class="patología {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.motivoIngEspecifico }}
                                    </td>
                                    <td class="edad {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.edad }}
                                    </td>
                                    <td class="dieta {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.dieta }}
                                    </td>
                                </tr>
                                {% set nombreHabitacionAnterior = nombre %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% elseif  is_granted('ROLE_STAFF')%}
        <div class="container">
            <div class="row">
                {% if isDoctor %}
                    <div class="col-md-4">
                        <a href="{{ path('doctor_agenda', {'periodo': 'dia'}) }}">
                            <div class="card text-white mb-3 usuariosOnDash" style="max-width: 18rem;">
                                <div class="card-header">Agenda</div>
                                <div class="card-body">
                                    <p class="card-text">Turnos y eventos</p>
                                </div>
                            </div>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a href="{{ path('doctor_historia') }}">
                            <div class="card text-white mb-3 clientesOnDash" style="max-width: 18rem;">
                                <div class="card-header">Pacientes</div>
                                <div class="card-body">
                                    <p class="card-text">Historias Clínicas</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

{% endblock %}

