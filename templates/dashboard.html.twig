{% extends 'base.html.twig' %}

{% block title %}Dashboard index{% endblock %}
{% block panelTitle %}Dashboard
    {% if (hayContratosVencidos or hayVencenEsteMes) %}
        <a href="{{ path('doctor_index', {'vencidos': (hayContratosVencidos) ? 1 : 2}) }}">
            <i class="bell far fa-bell" style="color: {{ colorCampana }}"></i>
        </a>
    {% endif %}
{% endblock %}
{% block body %}
    {% if not app.user %}
        Por favor, ingrese con su usuario y contraseña
        <a href="{{ path('app_login') }}">ingresar</a>
    {% elseif is_granted('ROLE_ADMIN') %}
        <div class="printiable">
            <div class="table-responsive">
                <table class="table dashboard border-0 mb-0">
                    <thead>
                        <th class="habitacion">Habitacion</th>
                        <th class="paciente">Paciente</th>
                        <th class="obraSocial">Obra Social</th>
                        <th class="patología">Patología</th>
                        <th class="edad">Edad</th>
                        <th class="dieta">Dieta</th>
                    </thead>
                    <tbody>
                        {% for nombre, habitacion in habitacionesYpacientes %}
                            {% set nombreHabitacionAnterior = "nuevo"  %}
                            {% for key, paciente in habitacion.cliente %}
                                <tr class="{{ ( habitacion.ocupadas is same as (habitacion.disponibles) ) ? 'completa' : 'incompleta' }}">
                                    <td class="habitacion {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {% if (nombre != nombreHabitacionAnterior) %}
                                            {{ nombre }} - {{ habitacion.ocupadas }} / {{ habitacion.disponibles }}
                                        {% endif %}
                                    </td>
                                    <td class="paciente {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}" >
                                        {{ paciente.nombre }} {{ paciente.apellido }}
                                    </td>
                                    <td class="obraSocial {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ obrasSociales[paciente.obraSocial] }}
                                    </td>
                                    <td class="patología {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.motivoIngEspecifico }}
                                    </td>
                                    <td class="edad {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.edad }}
                                    </td>
                                    <td class="dieta {{ (habitacion.cliente | length > 1 and key != 0) ? '' : 'border-0' }}">
                                        {{ paciente.dieta }}
                                    </td>
                                </tr>
                                {% set nombreHabitacionAnterior = nombre %}
                            {% endfor %}
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% elseif  is_granted('ROLE_STAFF')%}
        <div class="container">
            <div class="row">
                {% if isDoctor %}
                    <div class="col-md-4">
                        <a href="{{ path('doctor_agenda', {'periodo': 'dia'}) }}">
                            <div class="card text-white mb-3 usuariosOnDash" style="max-width: 18rem;">
                                <div class="card-header">Agenda</div>
                                <div class="card-body">
                                    <p class="card-text">Turnos y eventos</p>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endif %}

{% endblock %}

{% block modalImprimir %}
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="habitacion" id="habitacion">
        <label class="form-check-label" for="habitacion">
            Habitacion
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="paciente" id="paciente">
        <label class="form-check-label" for="paciente">
            Paciente
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="obraSocial" id="obraSocial">
        <label class="form-check-label" for="obraSocial">
            O. Social
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="patologia" id="patologia">
        <label class="form-check-label" for="patologia">
            Patología
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="dieta" id="dieta">
        <label class="form-check-label" for="dieta">
            Dieta
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input check" type="checkbox" value="edad" id="edad">
        <label class="form-check-label" for="edad">
            Edad
        </label>
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" value="todos" id="todos">
        <label class="form-check-label" for="todos">
            Todos
        </label>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/js/dashboard.js') }}"></script>
    <script>
        let printUrl = "{{ path('imprimir') }}";
    </script>
{% endblock %}