{% extends 'base.html.twig' %}

{% block title %}Cliente{% endblock %}
{% block panelTitle %}Datos del Cliente{% endblock %}
{% block body %}
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cliente.id }}</td>
            </tr>
            <tr>
                <th>Número de Historia Clínica</th>
                <td>{{ cliente.hClinica }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ cliente.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ cliente.apellido }}</td>
            </tr>
            <tr>
                <th>Número de Documento</th>
                <td>{{ cliente.dni }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cliente.email }}</td>
            </tr>
            <tr>
                <th>Teléfono</th>
                <td>{{ cliente.telefono }}</td>
            </tr>
            <tr>
                <th>Fecha de Ingreso</th>
                <td>{{ cliente.fIngreso ? cliente.fIngreso|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Fecha de Egreso</th>
                <td>{{ cliente.fEgreso ? cliente.fEgreso|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Motivo de Ingreso</th>
                <td>{{ cliente.motivoIng }}</td>
            </tr>
            <tr>
                <th>Motivo de Egreso</th>
                <td>{{ cliente.motivoEgr }}</td>
            </tr>
            <tr>
                <th>Activo</th>
                <td>{{ cliente.activo ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Viene De</th>
                <td>{{ cliente.vieneDe }}</td>
            </tr>
            <tr>
                <th>Doctor Derivante</th>
                <td>{{ cliente.docDerivante }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-default" href="{{ path('cliente_index') }}">Volver</a>

    <a class="btn btn-success" href="{{ path('cliente_edit', {'id': cliente.id}) }}">Editar</a>

    <div class="borrarForm">
        {{ include('cliente/_delete_form.html.twig') }}
    </div>
{% endblock %}
