            e.preventDefault();
            let seccion = $(this).data('seccion');
            
            if($(this).data('toogle') === 'cerrado') {
                $('.'+seccion).show();
                $(this).data('toogle', 'abierto');
                $(this).html('<i class="fas fa-chevron-up"></i>');
