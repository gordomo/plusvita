{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/loginForm.css') }}">
{% endblock %}
{% block body %}


    <div class="wrapper fadeInDown">
        <div id="formContent">
            <form method="post" action="{{ path('reset_password_blanquear') }}">
                <div class="fadeIn first">
                    <img src="{{ asset('assets/images/plusVitaLogo.png') }}" id="icon" alt="Logo" class="img-responsive"/>
                </div>
                <div class="fadeIn second">
                    <h1 class="h3 mb-3 font-weight-normal">Blanqueo de Claves</h1>
                    <input type="email" name="email" id="email" required autofocus placeholder="email">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary mrl-15" type="submit" style="width: 85%;">
                    Blanquar clave
                </button>
                <br>
                <a href="{{ path('app_login') }}">volver</a>
            </form>
        </div>
    </div>


{% endblock %}
