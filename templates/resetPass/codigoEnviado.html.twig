{% extends 'base.html.twig' %}

{% block title %}Reset Password{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('assets/css/loginForm.css') }}">
{% endblock %}
{% block body %}


    <div class="wrapper fadeInDown">
        <div id="formContent">
            <form method="post" action="{{ path('reset_password_code') }}">
                <div class="fadeIn first">
                    <img src="{{ asset('assets/images/plusVitaLogo.png') }}" id="icon" alt="Logo" class="img-responsive"/>
                </div>
                <div class="fadeIn second">
                    <p class="mb-3 font-weight-normal">Te hemos enviado un correo a <br>{{ userEmail }} con un codigo.</p>
                    <p class="mb-3 font-weight-normal">Ingresalo a continuación junto con tu nueva clave</p>
                    <div class="form-group">
                        <br>
                        <input type="text" name="code" id="code" required autofocus placeholder="codigo" autocomplete="off" value="código">
                    </div>
                    <div class="form-group">
                        <input type="password" name="clave" id="clave" required autofocus placeholder="nuevo password" autocomplete="off" value="nuevo password">
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <input type="hidden" name="email" value="{{ userEmail }}">
                    <br>
                    <p class="mb-3 font-weight-normal"><small>No te olvides de revisar tu bandeja de span si no encuentras el correo en los proximos 5 minutos</small></p>
                </div>



                <button class="btn btn-lg btn-primary mrl-15" type="submit" style="width: 85%;">
                    Blanquar clave
                </button>
                <br>
                <a href="{{ path('app_login') }}">volver</a>
            </form>
        </div>
    </div>


{% endblock %}
